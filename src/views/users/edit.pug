extends ../layouts/page.pug

block content
  h1 Изменить данные пользователя
  if error && error.message
    p= error.message  
  .container.mt-4
    form(action = routes.userPath(user.id), method = 'patch')
      div.form-group.mt-3
        label Имя:
        input.form-control(type = 'text', name = 'username', value = user.username)
      div.form-group.mt-3
        label Email:
        input.form-control(type = 'email', name = 'email', value = user.email)
      div.form-group.mt-3
        label Пароль:
        input.form-control(type = 'password', name = 'password', value = user.password)
      div.form-group.mt-3
        label Подтверждение пароля:
        input.form-control(type = 'password', name = 'passwordConfirmation', value = user.passwordConfirmation)
      input.btn.btn-primary.mt-4(type = 'submit', value = 'Сохранить')